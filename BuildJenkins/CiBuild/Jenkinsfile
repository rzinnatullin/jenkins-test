pipeline {
    agent any
    stages {
        stage('Check texts') {
            steps {
                script {
                    properties([pipelineTriggers([[$class: 'GitHubPushTrigger']])])
                }
                
                script {
                    echo 'Text 1'
                    echo readFile("${env.WORKSPACE}/Text1.txt")
                    
                    echo 'Text 2'
                    echo readFile("${env.WORKSPACE}/Text2.txt")
                }
            }
        }
    }
}